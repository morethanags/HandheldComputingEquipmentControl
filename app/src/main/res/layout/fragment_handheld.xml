<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.huntloc.handheldcomputingequipmentcontrol.HandheldFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="right"
            android:text="@string/credential_id"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_CredentialId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="number"
            android:text=""
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button_Register"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight=".50"
            android:text="@string/button_Check_text"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_DoorId"
            android:layout_width="fill_parent"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginTop="50sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/contractors_door_id"
            android:textSize="65sp" />
    </LinearLayout>
</LinearLayout>
